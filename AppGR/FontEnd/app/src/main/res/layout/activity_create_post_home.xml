<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreatePostHome">

    <!-- Clickable Image Placeholder -->
    <FrameLayout
        android:id="@+id/frame_image_placeholder"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:contentDescription="Clickable image placeholder"
        android:onClick="onSelectImage"> <!-- Method name in your activity -->

        <ImageView
            android:id="@+id/image_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@android:drawable/ic_menu_gallery" /> <!-- Replace with your image resource -->
    </FrameLayout>


    <!-- Title Input Field -->
    <EditText
        android:id="@+id/edittext_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frame_image_placeholder"
        android:layout_marginTop="16dp"
        android:hint="Enter Title"
        android:inputType="text"
        android:padding="12dp" />

    <!-- Description Input Field -->
    <EditText
        android:id="@+id/edittext_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_title"
        android:layout_marginTop="8dp"
        android:hint="Enter Description"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:padding="12dp"
        android:lines="5" />

    <!-- Upload Button -->
    <Button
        android:id="@+id/button_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_description"
        android:layout_marginTop="16dp"
        android:text="Upload"
        android:padding="12dp" />

</RelativeLayout>
