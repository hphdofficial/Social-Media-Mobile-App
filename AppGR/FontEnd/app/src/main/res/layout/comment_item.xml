<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:padding="8dp">

    <!-- Avatar của người bình luận -->
    <ImageView
        android:id="@+id/imageAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/avatar"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- Tên của người bình luận -->
    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="manojinbamani"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/imageAvatar"
        android:layout_alignTop="@id/imageAvatar"
        android:layout_marginStart="16dp"/>

    <!-- Icon thả tim -->
    <ImageView
        android:id="@+id/imageHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/heart"
        android:layout_alignTop="@id/textName"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"/>

    <!-- Nội dung bình luận -->
    <TextView
        android:id="@+id/textComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You probably never get tired of hearing this Jordi but you are so extremely talented love your ideas ❤️ love your camera lens😍"
        android:layout_toEndOf="@id/imageAvatar"
        android:layout_below="@id/textName"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"/>

    <!-- Nút trả lời -->
<!--    <Button-->
<!--        android:id="@+id/buttonReply"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/textComment"-->
<!--        android:layout_toStartOf="@id/textLikes"-->
<!--        android:layout_marginStart="16dp"-->
<!--        android:layout_marginTop="-3dp"-->
<!--        android:text="Trả lời"-->
<!--        android:background="@android:color/transparent"-->
<!--        android:textColor="@android:color/black" />-->

    <!-- Số lượng lượt thích -->
    <TextView
        android:id="@+id/textLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textComment"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:text="1.556 lượt thích" />

</RelativeLayout>
