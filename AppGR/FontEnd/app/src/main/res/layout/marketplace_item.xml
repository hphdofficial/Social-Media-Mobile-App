<!-- Main Vertical LinearLayout -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Existing layout elements -->
    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="150dp"
        android:layout_height="200dp" />

    <!-- New Horizontal LinearLayout for tvPrice and ivMore -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:text="5.500.000Ä‘"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivMore"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:contentDescription="More options"
            android:src="@drawable/ic_morehor_black" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDes"
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="2"
        android:text="MSI GF66 Katana i7-12650H VGA"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvLocate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:paddingBottom="12dp"
        android:text="TPHCM"
        android:textColor="#8e8e8e" />
</LinearLayout>

