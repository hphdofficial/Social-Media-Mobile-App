<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".CustomInformation"
    tools:ignore="ExtraText,HardcodedText">

    <ImageView
        android:id="@+id/ivBackArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back" /> <!-- Replace with your back arrow icon resource -->

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivBackArrow"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:text="UserName"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivUserProfile"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/tvUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/avatar" /> <!-- Replace with your user icon resource -->

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivUserProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Trần Đạt"
        android:textSize="24sp" />

    <!-- ImageView 1 -->
    <RelativeLayout
        android:id="@+id/rlProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUserName"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_background"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile" /> <!-- Replace with actual drawable resource -->

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="364dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/ivProfile"
            android:layout_alignBottom="@id/ivProfile"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-13dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="-17dp"
            android:background="@android:color/transparent"
            android:text="Profile"
            android:textColor="@color/black" />
    </RelativeLayout>


    <!-- ImageView 2 -->
    <RelativeLayout
        android:id="@+id/rlNotificationSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlProfile"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_background"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivNotificationSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ring" /> <!-- Replace with actual drawable resource -->

        <Button
            android:id="@+id/btnNotificationSound"
            android:layout_width="355dp"
            android:layout_height="52dp"
            android:layout_alignTop="@id/ivNotificationSound"
            android:layout_alignBottom="@id/ivNotificationSound"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-16dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="-16dp"
            android:background="@android:color/transparent"
            android:text="Thông báo &amp; âm thanh"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <!-- ImageView 3 -->
    <RelativeLayout
        android:id="@+id/rlSearchConversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlNotificationSound"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_background"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivSearchConversation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search" /> <!-- Replace with actual drawable resource -->

        <Button
            android:id="@+id/btnSearchConversation"
            android:layout_width="355dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/ivSearchConversation"
            android:layout_alignBottom="@id/ivSearchConversation"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-16dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="-16dp"
            android:background="@android:color/transparent"
            android:text="Tìm kiếm trong cuộc trò chuyện"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <!-- ImageView 4 -->
    <RelativeLayout
        android:id="@+id/rlParticipant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlSearchConversation"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_background"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivParticipant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iconpart" /> <!-- Replace with actual drawable resource -->

        <Button
            android:id="@+id/btnParticipant"
            android:layout_width="364dp"
            android:layout_height="53dp"
            android:layout_alignTop="@id/ivParticipant"
            android:layout_alignBottom="@id/ivParticipant"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-16dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="-16dp"
            android:background="@android:color/transparent"
            android:text="Participants"
            android:textColor="@android:color/black" />
    </RelativeLayout>

</RelativeLayout>
